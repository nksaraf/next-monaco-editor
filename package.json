{
  "name": "next-monaco-editor",
  "author": "Nikhil Saraf",
  "version": "0.0.1-beta.15",
  "license": "MIT",
  "main": "dist/next-monaco-editor/index.js",
  "typings": "dist/next-monaco-editor/esm/index.d.ts",
  "module": "dist/next-monaco-editor/esm/index.js",
  "files": [
    "dist",
    "plugin",
    "api",
    "worker"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "npm-run-all --parallel build:*",
    "build:main": "tsdx build --name next-monaco-editor && yarn build:entry next-monaco-editor",
    "build:api": "tsdx build -i ./src/api/index.ts --name api && yarn build:entry api",
    "build:worker": "tsdx build -i ./src/worker/index.ts --name worker && yarn build:entry worker",
    "build:entry": "deno --allow-write --allow-read scripts/entry.ts",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "next": "*",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "husky": "^4.2.3",
    "next": "^9.3.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tsdx": "^0.13.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "babel-loader": "^8.1.0",
    "dedent": "^0.7.0",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "next-transpile-modules": "^3.2.0",
    "worker-loader": "^2.0.0",
    "workerize-loader": "^1.1.0"
  }
}
