{
  "include": [
    "lib",
    "pages",
    "toolbox",
    "lib/plugins",
    "sandboxes",
    "workers/all.monaco.worker.ts",
    "workers/all.monaco.worker.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "suppressImplicitAnyIndexErrors": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@plugins": ["lib/plugins/index.ts"],
      "@plugins/*": ["lib/plugins/*"],
      "@hooks": ["./lib/hooks/index.ts"],
      "@monaco": ["./lib/monaco/index.ts"],
      "@sandkit": ["./lib/index.ts"],
      "@worker": ["./lib/worker/index.ts"],
      "@workers/*": ["./workers/*"],
      "@themes": ["./lib/themes/index.ts"],
      "@monaco-editor": ["./lib/components/MonacoEditor.tsx"],
      "graphql-language-service-parser": [
        "./lib/plugins/graphql/graphql-language-service/graphql-language-service-parser/src/index.ts"
      ],
      "graphql-language-service-interface": [
        "./lib/plugins/graphql/graphql-language-service/graphql-language-service-interface/src/index.ts"
      ],
      "graphql-language-service-types": [
        "./lib/plugins/graphql/graphql-language-service/graphql-language-service-types/src/index.ts"
      ],
      "graphql-language-service-utils": [
        "./lib/plugins/graphql/graphql-language-service/graphql-language-service-utils/src/index.ts"
      ]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", ""]
}
