{
  "include": ["pages", "monaco", "toolbox", "plugins", "sandboxes"],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "suppressImplicitAnyIndexErrors": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "plugins": ["./plugins/index.ts"],
      "plugins/*": ["./plugins/*"],
      "toolbox": ["./toolbox/index.ts"],
      "toolbox/*": ["./toolbox/*"],
      "monaco": ["./monaco/index.ts"],
      "monaco/worker": ["./monaco/worker/index.ts"],
      "graphql-language-service-parser": [
        "./plugins/graphql/language-service/graphql-language-service-parser/src/index.ts"
      ],
      "graphql-language-service-interface": [
        "./plugins/graphql/language-service/graphql-language-service-interface/src/index.ts"
      ],
      "graphql-language-service-types": [
        "./plugins/graphql/language-service/graphql-language-service-types/src/index.ts"
      ],
      "graphql-language-service-utils": [
        "./plugins/graphql/language-service/graphql-language-service-utils/src/index.ts"
      ]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
