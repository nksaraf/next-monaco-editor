{
  "include": ["packages", "next-monaco-editor", "pages", "playground"],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "suppressImplicitAnyIndexErrors": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "next-monaco-editor/*": ["next-monaco-editor/*"],
      "next-monaco-editor": ["next-monaco-editor/index.tsx"],
      "graphql-language-service-parser": [
        "packages/graphql-language-service-parser/src/index.ts"
      ],
      "graphql-language-service-interface": [
        "packages/graphql-language-service-interface/src/index.ts"
      ],
      "graphql-language-service-types": [
        "packages/graphql-language-service-types/src/index.ts"
      ],
      "graphql-language-service-utils": [
        "packages/graphql-language-service-utils/src/index.ts"
      ],
      "graphql-languageservice": [
        "packages/graphql-languageservice/src/index.ts"
      ]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
