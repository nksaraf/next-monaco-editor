{
  "include": [
    "packages",
    "next-monaco-editor",
    "pages",
    "playground",
    "plugins"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "suppressImplicitAnyIndexErrors": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "next-monaco-editor/*": ["./next-monaco-editor/*"],
      "monaco-plugins/*": ["./plugins/*"],
      "monaco-plugins": ["./plugins/index.ts"],
      "next-monaco-editor": ["./next-monaco-editor/index.tsx"],
      "graphql-language-service-parser": [
        "./playground/graphql/graphql-language-service-parser/src/index.ts"
      ],
      "graphql-language-service-interface": [
        "./playground/graphql/graphql-language-service-interface/src/index.ts"
      ],
      "graphql-language-service-types": [
        "./playground/graphql/graphql-language-service-types/src/index.ts"
      ],
      "graphql-language-service-utils": [
        "./playground/graphql/graphql-language-service-utils/src/index.ts"
      ]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
